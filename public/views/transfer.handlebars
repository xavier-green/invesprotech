
  <div class="row">
    <div class="col-sm-12">
      <h4 class="page-title">Transfert</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card-box">
        <div class="dropdown pull-right">
          <a href="/app/deposit"><button class="btn btn-primary waves-effect waves-light">Nouveau versement <i class="fa fa-plus"></i></button></a>
        </div>

        <h4 class="header-title m-t-0 m-b-30">Versements</h4>

        {{#if deposits_empty}}
          <p class="text-muted font-13 m-b-25">
            Vous n'avez en ce moment aucun <code>versement</code> en cours.
          </p>
        {{else}}

          <div class="table-responsive table-striped">
            <table class="table m-0">
              <thead>
                <tr>
                  <th>Portfolio</th>
                  <th>Date de création</th>
                  <th>Montant</th>
                  <th>Type fiscal</th>
                  <th>Status</th>
                  <th>Type</th>
                </tr>
              </thead>
              <tbody>
                {{#each deposits}}
                  <tr>
                    <th scope="row">{{portfolio_id.name}}</th>
                    <td>{{createdAt}}</td>
                    <td>{{quantity}} €</td>
                    <td>{{portfolio_id.fiscal_type}}</td>
                    <td><span class="label label-warning">En cours</span></td>
                    <td>{{recurrency.type}}
                    {{#if rec}}
                      ({{recurrency.start}})
                    {{/if}}
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>

          {{/if}}
      </div>
    </div><!-- end col -->

  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card-box">
        <div class="dropdown pull-right">
          <a href="/app/retrait"><button class="btn btn-primary waves-effect waves-light">Nouveau retrait <i class="fa fa-plus"></i></button></a>
        </div>

        <h4 class="header-title m-t-0 m-b-30">Retraits</h4>

        {{#if retraits_empty}}
          <p class="text-muted font-13 m-b-25">
            Vous n'avez en ce moment aucun <code>retrait</code> en cours.
          </p>
        {{else}}

          <div class="table-responsive table-striped">
            <table class="table m-0">
              <thead>
                <tr>
                  <th>Portfolio</th>
                  <th>Date de création</th>
                  <th>Montant</th>
                  <th>Type fiscal</th>
                  <th>Status</th>
                  <th>Type</th>
                </tr>
              </thead>
              <tbody>
                {{#each retraits}}
                  <tr>
                    <th scope="row">{{portfolio_id.name}}</th>
                    <td>{{createdAt}}</td>
                    <td>{{quantity}} €</td>
                    <td>{{portfolio_id.fiscal_type}}</td>
                    <td><span class="label label-warning">En cours</span></td>
                    <td>{{recurrency.type}}
                    {{#if rec}}
                      ({{recurrency.start}})
                    {{/if}}
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>

          {{/if}}

      </div>
    </div><!-- end col -->

  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card-box">
        <div class="dropdown pull-right">
          <button class="btn btn-primary waves-effect waves-light">Nouveau transfert <i class="fa fa-plus"></i></button>
        </div>

        <h4 class="header-title m-t-0 m-b-30">Transfert de mandats externes</h4>

        <p class="text-muted font-13 m-b-25">
          Vous n'avez en ce moment aucun <code>transfert</code> en cours.
        </p>

      </div>
    </div><!-- end col -->

  </div>

</div>
